<p id="notice"><%= notice %></p>

<p>
    <strong>Name:</strong>
    <%= @club.name %>
</p>

<p>
    <strong>Description:</strong>
    <%= @club.description %>
</p>

<br>

<h1>Players</h1>

<table>
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @players.each do |player| %>
        <tr>
            <td><%= player.first_name %></td>
            <td><%= player.last_name %></td>
            <td><%= player.email %></td>
            <td><%= link_to 'Show', player %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'Back', clubs_path %>